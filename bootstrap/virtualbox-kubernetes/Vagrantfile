	#HOST_K8S_CONFIG_DIR = "#{Dir.home}/.kube/config"
	#shell: rsync --rsync-path='sudo rsync' -avz -e ssh /home/vagrant/.kube/config {{ host_user }}@{{ host_ip }}:{{ host_k8s_config_dir }}